!!!
%html
  %head
    %title 登録済リスト
    %link{rel: "stylesheet", href: "https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", integrity: "sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB", crossorigin: "anonymous" }
    %link{rel: "stylesheet", href: "https://use.fontawesome.com/releases/v5.0.13/css/all.css", integrity: "sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp", crossorigin: "anonymous" }
    %link{rel: "stylesheet", href: "/css/list.css" }
    %script{ type: "text/javascript", src: "/js/list.js" }
  %body
    .container-fluid
      #player
      %form
        .form-group
          %input{type: "text", id: "myInput", onkeyup: "myFunction()", class: "form-control", placeholder: "Search for names.." }
      %ul.list-group#youtube_ul
        - @list.each do |yid, name, title, playback_time|
          - time = "#{playback_time / 60}分#{playback_time % 60}秒"
          %li.list-group-item
            %a{href: "#", onClick: "javascript: play('#{yid}');" }
              = title
            = time
            = "@#{name}"
            %a{href: "https://www.youtube.com/watch?v=#{yid}", target: "_blank", rel: "noopener" }
              %i.fab.fa-youtube.text-danger
